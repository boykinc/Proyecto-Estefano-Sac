                                    <a href="#"><i class="fa fa-facebook-square fa-lg"></i></a>
                                    <a href="#"><i class="fa fa-twitter-square fa-lg"></i></a>
                                    <a href="#"><i class="fa fa-google-plus-square fa-lg"></i></a>
                                    <a href="#"><i class="fa fa-envelope-square fa-lg"></i></a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </main>

    <script src="//code.jquery.com/jquery-1.11.1.min.js"></script>
    <script src="//netdna.bootstrapcdn.com/bootstrap/3.0.0/js/bootstrap.min.js"></script>
    <footer class="container body-content">
        <p style="color:white;font-size:17px;">  <strong><em> &copy; @DateTime.Now.Year - ESTEFANO SAC</em></strong></p>
    </footer>
</body>
</html>